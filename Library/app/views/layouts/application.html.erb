<!DOCTYPE html>
<html>
  <head>
    <title>Library</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= image_tag 'logo.png', width: 472, height: 213 %>
    <header>
      <p>背景を変更</p>
      <%= l Time.now %><br>
      <%= l Time.now, format: :default %><br>
      <%= l Time.now, format: :long %><br>
      <%= localize Time.now, format: :short %><br>
    </header>
    <%= yield %>
  </body>
</html>
