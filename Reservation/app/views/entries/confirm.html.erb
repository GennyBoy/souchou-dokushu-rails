<p id="notice"><%= notice %></p>

  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<p>
  <strong>Reserved_date:</strong>
  <%= @entry.reserved_date %>
</p>

<p>
  <strong>Usage_time:</strong>
  <%= @entry.usage_time %>
</p>

<p>
  <strong>People:</strong>
  <%= @entry.people %>
</p>

<%= form_with(model: @entry, local: true, url: room_entries_path(@entry.room_id)) do |form| %>
  <%# hidden_field に user_id を追加 %>
  <%= form.hidden_field :user_id %>
  <%= form.hidden_field :reserved_date %>
  <%= form.hidden_field :usage_time %>
  <%= form.hidden_field :people %>
  <%= form.hidden_field :room_id %>
  <%= form.submit %>
  <%= form.submit "戻る", name: "back" %>
<% end %>
